<Window x:Class="LMS.CRM.Views.Windows.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMS.CRM.Views.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        FlowDirection="RightToLeft"
        Title="اطلاعات راننده" Height="200" Width="800">

    <Grid>
        <TextBlock Text="در حال وارد کردن داده‌ها" FontSize="20" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBlock Name="SelectedFilePath" Text="نام فایل:" FontSize="14" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Top" Margin="0,40,0,0"/>
        <ProgressBar Name="ProgressBar" Height="20" Width="650" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="ProgressText" FontSize="16" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Bottom" Margin="0,0,0,40"/>
        <TextBlock Name="ProcessedCount" FontSize="14" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
