<ui:UiWindow
    x:Class="Wpf.Ui.Demo.Views.Container"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:demo="clr-namespace:Wpf.Ui.Demo"
    xmlns:diagnostics="clr-namespace:Wpf.Ui.Demo.Views.Diagnostics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Wpf.Ui.Demo.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:viewmodels="clr-namespace:Wpf.Ui.Demo.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DataViewModel}"
    Title="Library Management System"
    Width="1280"
    Height="720"
    d:DesignWidth="900"
    d:DesignHeight="650"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    Closed="UiWindow_Closed"
    FlowDirection="RightToLeft"
    mc:Ignorable="d">

    <!--
        So far Visual Studio has been very reluctant to accept the default window styles.
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid
            x:Name="RootMainGrid"
            Grid.Row="1"
            Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  This is the main navigation of the application.  -->
            <ui:NavigationStore
                x:Name="RootNavigation"
                Grid.Column="0"
                Margin="6,0,6,0"
                Frame="{Binding ElementName=RootFrame}"
                Navigated="RootNavigation_OnNavigated"
                Precache="False"
                SelectedPageIndex="-1"
                TransitionDuration="200"
                TransitionType="FadeInWithSlide">
                <ui:NavigationStore.Items>
                    <ui:NavigationItem
                        Name="DashboardNavi"
                        Cache="True"
                        Content="داشبورد"
                        Icon="Home24"
                        PageTag="dashboard"
                        PageType="{x:Type pages:Dashboard}" />
                    <ui:NavigationSeparator />
                    <ui:NavigationItem
                        Name="MembersNavi"
                        Cache="True"
                        Content="اعضا"
                        IconForeground="red"
                        Icon="People24"
                        Command="{Binding ViewModel.NavigateCommand}"
                        CommandParameter="navigate_to_Members"
                        PageType="{x:Type pages:CRUD}" />
                    <ui:NavigationItem
                        Name="ResourcesNavi"
                        Content="منابع"
                        Icon="Library24"
                        IconForeground="red"
                        Visibility="Visible"
                        Command="{Binding ViewModel.NavigateCommand}"
                        CommandParameter="navigate_to_Resources"
                        PageType="{x:Type pages:CRUD}"/>
                    <ui:NavigationItem
                        Name="ReservationsNavi"
                        Cache="True"
                        Content="رزروها"
                        Icon="BookmarkMultiple24" 
                        IconForeground="red" 
                        Command="{Binding ViewModel.NavigateCommand}"
                        CommandParameter="navigate_to_Reservations"
                        PageType="{x:Type pages:CRUD}"/>
                    <ui:NavigationItem
                        Name="BorrowsNavi"
                        Content="واگذاری"
                        Icon="BookClock24"
                        IconForeground="red"
                        Visibility="Visible" />
                </ui:NavigationStore.Items>
                <ui:NavigationStore.Footer>
                    <!--  A navigation element that does not point to the page can be used as a button.  -->
                    <ui:NavigationItem
                        Click="NavigationButtonTheme_OnClick"
                        Content="تغییر زمینه"
                        Icon="DarkTheme24" />
                    <ui:NavigationItem
                        Name="ActiveUser"
                        Cache="True"
                        Content="کاربر"
                        Image="pack://application:,,,/Resources/wpfui_full.png" />
                        <!--PageType="{x:Type pages:UserProfile}"-->
                    <ui:NavigationItem
                        Name="LogOut"
                        Content="خروج کاربر"
                        Click="LogOut_Click"
                        Image="pack://application:,,,/Resources/Logout.png"
                        Tag="controls" />
                </ui:NavigationStore.Footer>
            </ui:NavigationStore>

            <!--  We display our pages inside this element.  -->
            <Border
                Grid.Column="1"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Frame x:Name="RootFrame" Grid.Row="1" />
                    <ui:Breadcrumb
                        Grid.Row="0"
                        Margin="18"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="24"
                        Navigation="{Binding ElementName=RootNavigation}" />

                    <ui:Snackbar
                        x:Name="RootSnackbar"
                        Grid.Row="1"
                        MaxWidth="600"
                        Appearance="Secondary"
                        CloseButtonEnabled="True"
                        Timeout="5000" />
                </Grid>
            </Border>
        </Grid>

        <Grid
            x:Name="RootLoginGrid"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*" />
                <ColumnDefinition Width=".5*" />
                <ColumnDefinition Width=".25*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <StackPanel VerticalAlignment="Center" Margin="10 0 10 0">
                    <Image
                        MaxWidth="200"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/Resources/LMS Logo.png" />
                    <ui:InfoBar Name="NotificationBar" IsOpen="False"/>
                    <ui:TextBox Name="Username" Icon="Person24" Margin="5" PlaceholderText="نام کاربری" HorizontalContentAlignment="Stretch"/>
                    <ui:PasswordBox Name="Password" Icon="Key24" Margin="5" PlaceholderText="رمز عبور" HorizontalContentAlignment="Stretch"/>
                    <ui:Hyperlink
                            Content="فراموش کردن اطلاعات"
                            HorizontalAlignment="Center"
                            Click="ForgetPass_Click"
                            Icon="Key24" />

                    <Separator Margin="5" BorderBrush="{DynamicResource PaletteBlueGreyBrush}"/>
                    <ui:ToggleSwitch 
                        Name="SaveUser" 
                        Content="ذخیره کاربر" 
                        IsChecked="False" />
                    <ui:ToggleSwitch 
                        Name="SavePass" 
                        Content="ذخیره رمز" 
                        IsChecked="False" />
                    <Grid Margin="0 10 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ui:Button
                            Name="DatabaseReconnect"
                            MinWidth="40"
                            MinHeight="40"
                            CornerRadius="20"
                            HorizontalAlignment="Stretch"
                            Visibility="Collapsed"
                            Appearance="Danger"
                            FontSize="16"
                            Click="DatabaseReconnect_Click"                
                            Icon="DatabasePlugConnected20" />
                        <ui:Button
                            Name="Login"
                            Grid.Column="1"
                            CornerRadius="15"
                            HorizontalAlignment="Stretch"
                            Appearance="Transparent"
                            BorderThickness="1"
                            FontSize="16"
                            Content="ورود"
                            Click="Login_Click" 
                            KeyDown="Login_KeyDown"/>
                        <ui:Button
                            Name="RegisterAndLogin"
                            Grid.Column="2"
                            CornerRadius="15"
                            HorizontalAlignment="Stretch"
                            Appearance="Primary"
                            BorderThickness="1"
                            FontSize="16"
                            Content="ثبت نام و ورود"
                            Click="RegisterAndLogin_Click" 
                            KeyDown="Login_KeyDown"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid
            x:Name="RootWelcomeGrid"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border CornerRadius="0 10 10 0">
                <Grid Grid.Column="0">
                    <Image
                    MaxWidth="180"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="pack://application:,,,/Resources/LMS Logo.png" />
                </Grid>
            </Border>
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True" />
                <TextBlock
                    Name="WelcomeMessage"
                    Margin="0,12,0,0"
                    FontSize="16"
                    FontWeight="Medium"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <!--
        <ui:NavigationView Grid.Row="1" Type="Compact" />
        -->

        <!--  Dialogue is above all controls except the navigation buttons. So it covers all the content, but allows you to close or move the application.  -->
        <ui:Dialog
            x:Name="RootDialog"
            Title="پیام سیستم"
            Grid.Row="0"
            Grid.RowSpan="2"
            ButtonLeftName="متوجه شدم"
            ButtonLeftAppearance="Info"
            ButtonRightVisibility="Collapsed"/>

        <!--
            For debugging the focus and the keyboard navigation,
            please make this view visible.
        -->

        <!--  The title bar contains window navigation elements and some Tray related extras.  -->
        <!--  You can put additional controls in the header, such as a search bar.  -->
        <!--  <ui:TitleBar.Header />  -->

        <!--
            ButtonsForeground="Aqua"
            Foreground="Red"
        -->
        <StackPanel>

            <ui:TitleBar
                Title="CRM کتابخانه"
                Grid.Row="0"
                Grid.Column="0"
                ForceShutdown="False"
                Icon="pack://application:,,,/Resources/LMS Logo.png"
                MinimizeToTray="False"  
                ShowHelp="False"
                ShowClose="True"
                ShowMaximize="True"
                ShowMinimize="True"
                UseSnapLayout="True">
                <ui:TitleBar.Tray>
                    <ui:NotifyIcon
                    FocusOnLeftClick="True"
                    Icon="pack://application:,,,/Resources/LMS Logo.png"
                    MenuOnRightClick="True"
                    TooltipText="Tiva Gate">
                        <ui:NotifyIcon.Menu>
                            <ContextMenu>
                                <!--<ui:MenuItem
                                Click="TrayMenuItem_OnClick"
                                Header="Home"
                                SymbolIcon="Library28"
                                Tag="home" />
                            <ui:MenuItem
                                Click="TrayMenuItem_OnClick"
                                Header="Save"
                                SymbolIcon="Save24"
                                Tag="save" />
                            <ui:MenuItem
                                Click="TrayMenuItem_OnClick"
                                Header="Open"
                                SymbolIcon="Folder28"
                                Tag="open" />
                            <Separator />-->
                                <ui:MenuItem
                                Click="TrayMenuItemReload_OnClick"
                                Header="Reload"
                                SymbolIcon="ArrowClockwise24"
                                Tag="reload" />
                                <ui:MenuItem
                                Click="TrayMenuItemExit_OnClick"
                                Header="Exit"
                                SymbolIcon="ArrowClockwise24"
                                Tag="reload" />
                            </ContextMenu>
                        </ui:NotifyIcon.Menu>
                    </ui:NotifyIcon>
                </ui:TitleBar.Tray>
            </ui:TitleBar>
            <ProgressBar Name="ProgressBar" Foreground="{DynamicResource PalettePrimaryBrush}" Minimum="0" Maximum="100" Visibility="Collapsed" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</ui:UiWindow>
