<ui:UiPage
    x:Class="Wpf.Ui.Demo.Views.Pages.CRUD"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Demo.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:persianDateControls="clr-namespace:Mohsen.PersianDateControls;assembly=Mohsen.PersianDateControls"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
    xmlns:viewmodels="clr-namespace:Wpf.Ui.Demo.ViewModels" 
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    Title="Controls"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    FlowDirection="RightToLeft"
    Loaded="OnLoaded"
    Scrollable="true"
    Unloaded="OnUnloaded"
    mc:Ignorable="d">

    <Grid Name="MainPanelGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height=".05*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Action Buttons -->
        <StackPanel Orientation="Horizontal">
            <ui:Button 
                Name="ShowAddPanel"
                Appearance="Primary"
                FontSize="16"
                Margin="5"
                Icon="PersonAdd24"
                ToolTip="افزودن رکورد"
                Click="ShowAddPanel_Click"/>
            <ui:Button 
                Name="ShowEditPanel"
                Appearance="Primary"
                FontSize="16"
                Margin="5"
                Icon="Edit24"
                ToolTip="ویرایش اطلاعات"
                Click="ShowEditPanel_Click"/>
            <Separator/>
            <ui:Button 
                Name="ShowFilterPanel"
                Appearance="Info"
                FontSize="16"
                Margin="5"
                Icon="Filter24"
                ToolTip="اعمال فیلتر"
                Click="ShowFilterPanel_Click"/>
            <Separator/>
            <ui:Button 
                Name="ExportExcel"
                Appearance="Secondary"
                FontSize="16"
                Margin="5"
                HorizontalAlignment="Stretch"
                Icon="DocumentSave24"
                ToolTip="ذخیره گزارش (.csv)" />
            <ui:Button 
                Name="ImportExcel"
                Appearance="Secondary"
                FontSize="16"
                Margin="5"
                IsEnabled="True"
                HorizontalAlignment="Stretch"
                Icon="DocumentDatabase24"
                ToolTip="ذخیره اطلاعات در پایگاه داده" />
            <Separator/>
        </StackPanel>

        <!-- Main DataGrid -->
        <ui:InfoBar Grid.Row="1" Name="NotificationBar" IsOpen="False"/>
        <dxg:GridControl 
            Name="gridControl"
            Grid.Row="2"
            MaxHeight="1000"
            ShowBorder="False"
            AutoGenerateColumns="RemoveOld"
            EnableSmartColumnsGeneration="True"
            ItemsSource="{Binding Entities}"
            SelectedItem="{Binding SelectedEntity}">
            <dxg:GridControl.View>
                <dxg:TableView 
                    AllowEditing="True"
                    NewItemRowPosition="Top"
                    ShowGroupPanel="False"
                    ValidateRow="TableView_ValidateRow"
                    ValidateRowDeletion="TableView_ValidateRowDeletion"
                    RowUpdated="TableView_RowUpdated" />
            </dxg:GridControl.View>

            <!--<dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="NationalCode" Header="کد ملی"/>
                <dxg:GridColumn FieldName="FirstName" Header="نام"/>
                <dxg:GridColumn FieldName="LastName" Header="نام خانوادگی"/>
                <dxg:GridColumn FieldName="StartDate" Header="تاریخ شروع"/>
                <dxg:GridColumn FieldName="ExpiryDate" Header="تاریخ انقضا"/>
                <dxg:GridColumn FieldName="MaxBorrowCount" Header="حداکثر تعداد امانت"/>
                <dxg:GridColumn FieldName="BirthDate" Header="تاریخ تولد"/>
                <dxg:GridColumn FieldName="Address" Header="آدرس"/>
                <dxg:GridColumn FieldName="PhoneNumber" Header="شماره تلفن"/>
                <dxg:GridColumn FieldName="PostCode" Header="کد پستی"/>
                <dxg:GridColumn FieldName="FatherName" Header="نام پدر"/>
                <dxg:GridColumn FieldName="Debt" Header="بدهی"/>
                <dxg:GridColumn FieldName="Status" Header="وضعیت"/>
            </dxg:GridControl.Columns>-->
        </dxg:GridControl>

        <!-- Progress Ring -->
        <ui:ProgressRing 
            x:Name="LoadingRing"
            IsIndeterminate="True" 
            Grid.Row="1"
            Visibility="Collapsed"/>

        <!-- Edit Panel -->
        <Border 
            Name="EditPanel"
            Background="#AA000000"
            Visibility="Collapsed"
            Grid.RowSpan="3"
            Margin="0,100,0,100"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock 
                    Text="ویرایش اطلاعات"
                    FontSize="20"
                    FontWeight="Bold"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>

                <!-- Editable Fields -->
                <dxe:TextEdit Grid.Row="1" Grid.Column="0" Name="EditNationalCode" Label="کد ملی"/>
                <dxe:TextEdit Grid.Row="1" Grid.Column="1" Name="EditFirstName" Label="نام"/>
                <dxe:TextEdit Grid.Row="2" Grid.Column="0" Name="EditLastName" Label="نام خانوادگی"/>
                <dxe:DateEdit Grid.Row="2" Grid.Column="1" Name="EditBirthDate" Label="تاریخ تولد"/>
                <dxe:TextEdit Grid.Row="3" Grid.Column="0" Name="EditAddress" Label="آدرس"/>
                <dxe:TextEdit Grid.Row="3" Grid.Column="1" Name="EditPhoneNumber" Label="شماره تلفن"/>
                <dxe:TextEdit Grid.Row="4" Grid.Column="0" Name="EditPostCode" Label="کد پستی"/>
                <dxe:TextEdit Grid.Row="4" Grid.Column="1" Name="EditFatherName" Label="نام پدر"/>
                <dxe:SpinEdit Grid.Row="5" Grid.Column="0" Name="EditDebt" Label="بدهی" DisplayFormatString="C2"/>
                <dxe:ComboBoxEdit Grid.Row="5" Grid.Column="1" Name="EditStatus" Label="وضعیت"/>

                <!-- Save and Cancel Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Name="SaveEdit" Content="ذخیره" Width="100" Margin="5" Click="SaveEdit_Click"/>
                    <Button Name="CancelEdit" Content="لغو" Width="100" Margin="5" Click="CancelEdit_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Panel -->
        <Border 
            Name="FilterPanel"
            Background="#AA000000"
            Visibility="Collapsed"
            Grid.RowSpan="3"
            Margin="0,100,0,100"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock 
                    Text="فیلتر کردن اطلاعات"
                    FontSize="20"
                    FontWeight="Bold"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>

                <!-- Filter Fields -->
                <dxe:TextEdit Grid.Row="1" Grid.Column="0" Name="FilterNationalCode" Label="کد ملی"/>
                <dxe:TextEdit Grid.Row="1" Grid.Column="1" Name="FilterFirstName" Label="نام"/>
                <dxe:TextEdit Grid.Row="2" Grid.Column="0" Name="FilterLastName" Label="نام خانوادگی"/>
                <dxe:DateEdit Grid.Row="2" Grid.Column="1" Name="FilterStartDate" Label="تاریخ شروع"/>
                <dxe:DateEdit Grid.Row="3" Grid.Column="0" Name="FilterExpiryDate" Label="تاریخ انقضا"/>
                <dxe:ComboBoxEdit Grid.Row="3" Grid.Column="1" Name="FilterStatus" Label="وضعیت"/>

                <!-- Apply and Cancel Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Name="ApplyFilter" Content="اعمال" Width="100" Margin="5" Click="ApplyFilter_Click"/>
                    <Button Name="CancelFilter" Content="لغو" Width="100" Margin="5" Click="CancelFilter_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</ui:UiPage>