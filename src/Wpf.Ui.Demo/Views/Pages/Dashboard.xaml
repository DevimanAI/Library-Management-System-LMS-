<ui:UiPage
    x:Class="Wpf.Ui.Demo.Views.Pages.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Demo.Views.Pages"
    xmlns:gif="clr-namespace:WpfAnimatedGif;assembly=WpfAnimatedGif"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Dashboard"
    
    d:DesignWidth="1920"
    d:DesignHeight="1200"
    FlowDirection="RightToLeft"
    Scrollable="True"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:Dashboard,
    IsDesignTimeCreatable=False}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height=".4*" />
        </Grid.RowDefinitions>


        <Grid Name="DashboardPanel">
            <Image 
                x:Name="AnimatedGif" 
                gif:ImageBehavior.RepeatBehavior="Forever"
                gif:ImageBehavior.AnimatedSource="/Resources/LMS Dashboard.gif" 
                RenderOptions.BitmapScalingMode="HighQuality"
                HorizontalAlignment="Center"
                Width="{Binding ActualWidth, ElementName=DashboardPanel}"
                Height="{Binding ActualHeight, ElementName=DashboardPanel}"
                Stretch="UniformToFill"/>

            <StackPanel
                Margin="154"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="Transparent">
                <TextBlock
                    FontSize="18"
                    Foreground="#B7FFFFFF"
                    HorizontalAlignment="Left"
                    Text="ایمان احمدی" />
                <TextBlock
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#FFFFFF"
                    Text="نرم افزار مدیریتی کتابخانه" />
                <TextBlock
                    FontSize="18"
                    Foreground="#B7FFFFFF"
                    Text="ذخیره و گزارشگیری عملیات های کتابخانه" />
                <ui:Button
                    Height="36"
                    FontSize="18"
                    Margin="0,6,0,0"
                    Padding="30,6"
                    HorizontalAlignment="Left"
                    Appearance="Transparent"
                    Command="{Binding ViewModel.NavigateCommand}"
                    CommandParameter="navigate_to_licenseControl"
                    Content="عملیات ها"
                    Foreground="{DynamicResource TextFillColorLightPrimaryBrush}" />
            </StackPanel>
            <TextBlock
                Margin="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="10"
                Foreground="#57FFFFFF"
                Text="Created by IMAN AHMADI" />
        </Grid>

        <Grid Grid.Row="1">
            <ScrollViewer
                HorizontalScrollBarVisibility="Visible" 
                VerticalScrollBarVisibility="Disabled">
                <ListView
                    x:Name="PassageList"
                    SelectedIndex="0" d:ItemsSource="{d:SampleData ItemCount=7}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Image
                                    VerticalAlignment="Center"
                                    MaxHeight="200"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="pack://application:,,,/Resources/LMS Logo.png" />
                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="کتابخانه مرکزی تهران" />
                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Text="Library" />
                                <ui:Rating
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    Value="4" />
                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Text="شعبه فعال" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ui:VirtualizingWrapPanel
                                Orientation="Horizontal"
                                SpacingMode="Uniform"
                                StretchItems="False" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</ui:UiPage>
